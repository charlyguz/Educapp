{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}/src"
    },
    {
      "name": "Launch Firefox",
      "request": "launch",
      "type": "firefox",
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}/src"
    },
    {
      "name": "Launch Firefox Dev",
      "request": "launch",
      "type": "firefox",
      "linux": {
        "firefoxExecutable": "/usr/bin/firefox-developer-edition"
      },
      "windows": {
        "firefoxExecutable": "F:\\Install\\Firefox Developer Edition\\firefox.exe"
      },
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}/src",
      "pathMappings": [
        {
          "url": "http://localhost:4000/f",
          "path": "vscode-remote://wsl%2Bubuntu-18.04/f"
        }
      ]
    },
    {
      "name": "Attach to Firefox",
      "type": "firefox",
      "request": "attach"
    }
  ]
}